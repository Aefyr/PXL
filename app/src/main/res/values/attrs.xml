<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PixelImageView">
        <attr name="image" format="reference"/>
        <attr name="imageBackground" format="color"/>
        <attr name="autoResizeToMax" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SimpleColorPickerH">
        <attr name="circleSize" format="dimension"/>
        <attr name="circleStrokeWidth" format="dimension"/>
        <attr name="valueGradientWidth" format="dimension"/>
        <attr name="cornersRounding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SymmetryAxisDragger">
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="HSVSeekBar">
        <attr name="rounding" format="dimension"/>
        <attr name="mode" format="enum">
            <enum name="H" value="0"/>
            <enum name="S" value="1"/>
            <enum name="V" value="2"/>
        </attr>
        <attr name="pointerShadowSize" format="dimension" />
        <attr name="pointerPadding" format="dimension"/>
    </declare-styleable>

</resources>