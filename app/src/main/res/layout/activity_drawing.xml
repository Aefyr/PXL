<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.aefyr.pxl.AdaptivePixelSurfaceH
        android:id="@+id/aps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/undo"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/undo" />

    <ImageButton
        android:id="@+id/redo"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/redo" />

    <ImageButton
        android:id="@+id/grid"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/symmetry"
        app:srcCompat="@drawable/gridoff" />

    <ImageButton
        android:id="@+id/symmetry"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/clear"
        app:srcCompat="@drawable/symmetryoff" />

    <ImageButton
        android:id="@+id/cursorMode"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/symmetry"
        android:layout_toEndOf="@+id/symmetry"
        app:srcCompat="@drawable/normal2" />

    <ImageButton
        android:id="@+id/clear"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/clear" />

    <com.aefyr.pxl.ColorCircle
        android:id="@+id/currentColor"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/cursorAction"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clear"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector2"
        android:text="@string/cursor_action"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:visibility="gone" />

    <com.aefyr.pxl.ToolPickView
        android:id="@+id/currentTool"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <com.aefyr.pxl.SymmetryModePickView
        android:id="@+id/emve"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/grid"
        android:layout_below="@+id/grid"
        app:bitmapSize="60dp"
        app:gapSize="4dp" />

    <ImageButton
        android:id="@+id/TMP"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Move"
        app:srcCompat="@drawable/tempsplash" />

    <Button
        android:id="@+id/minus"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/TMP"
        android:layout_alignParentEnd="true"
        android:text="-" />

    <Button
        android:id="@+id/plus"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/minus"
        android:layout_alignParentEnd="true"
        android:text="+" />

</RelativeLayout>