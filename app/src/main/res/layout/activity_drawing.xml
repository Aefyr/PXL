<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.af.pxl.AdaptivePixelSurface
        android:id="@+id/aps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/undo"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/undo" />

    <ImageButton
        android:id="@+id/redo"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/redo" />

    <ImageButton
        android:id="@+id/grid"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/symmetry"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/gridoff" />

    <ImageButton
        android:id="@+id/symmetry"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/clear"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/symmetryoff" />

    <ImageButton
        android:id="@+id/cursorMode"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/symmetry"
        android:layout_toEndOf="@+id/symmetry"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cursor" />

    <ImageButton
        android:id="@+id/clear"
        style="@style/PXLImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/clear" />

    <com.af.pxl.ColorCircle
        android:id="@+id/color"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/cursorAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw!"
        android:layout_above="@+id/undo"
        android:layout_alignParentStart="true" />

    <com.af.pxl.ToolPickView
        android:id="@+id/currentTool"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <com.af.pxl.SymmetryModePickView
        android:id="@+id/emve"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/symmetry"
        android:layout_below="@id/symmetry"
        app:bitmapSize="60dp"
        app:gapSize="4dp" />

    <Button
        android:id="@+id/TMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Move" />

</RelativeLayout>