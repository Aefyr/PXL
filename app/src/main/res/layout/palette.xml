<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="8dp">

    <com.aefyr.pxl.palettes.PaletteView3
        android:id="@+id/pv2"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/colorBackground" />

    <Button
        android:id="@+id/pvDone"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pv2"
        android:layout_marginTop="8dp"
        android:text="@string/done" />

    <TextView
        android:id="@+id/paletteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="Palette Name"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paletteName"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:text="@string/color_edit_hint" />

</RelativeLayout>