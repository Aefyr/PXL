<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlmostBlack"
    tools:context="com.aefyr.pxl.fragments.PalettesFragment">

    <!-- TODO: Update blank pxlFragment layout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/palettesRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/palettesFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:rotation="45"
        android:tint="@color/colorImageButtonBackgroundTint"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_close_white_48dp" />

</RelativeLayout>
