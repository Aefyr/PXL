<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pixel_surface">
        <com.af.pxl.Preferences.ColorPickPreference android:title="@string/select_background_color" android:key="background_color" android:layout="@layout/pref_generic_color_pick" android:defaultValue="-9211021"/>
        <com.af.pxl.Preferences.ColorPickPreference
            android:defaultValue="-16777216"
            android:key="grid_color"
            android:layout="@layout/pref_generic_color_pick"
            android:title="@string/select_grid_color" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/cursor">
        <com.af.pxl.Preferences.CursorSensitivityPreference
            android:defaultValue="9"
            android:key="cursor_sensitivity"
            android:layout="@layout/pref_cursor_sensitivity_seekbar"
            android:title="Cursor Sensitivity" />
        <com.af.pxl.Preferences.CursorOpacityPreference
            android:defaultValue="255"
            android:key="cursor_opacity"
            android:layout="@layout/pref_cursor_opacity_seekbar"
            android:title="Cursor opacity" />
        <Preference
            android:enabled="false"
            android:title="@string/select_cursor_image" />
    </PreferenceCategory>
</PreferenceScreen>